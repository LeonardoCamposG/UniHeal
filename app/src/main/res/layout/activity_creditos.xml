<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Creditos">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-16dp"
            tools:layout_editor_absoluteY="-5dp">

            <TextView
                android:id="@+id/txtCréditos"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#50C878"
                android:gravity="center"
                android:padding="15dp"
                android:text="Créditos"
                android:textColor="#FFFFFF"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtProfessoresDocentes"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center"
                android:text="Docentes"
                android:textAlignment="center"
                android:textColor="#50C878"
                android:textIsSelectable="false"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDocentes"
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:gravity="center"
                android:text="
Prof. Dr. Me. Elvio Gilberto da Silva\n
Profª. Dra. Me. Márcia Aparecida\n
Nuevo Gatti (professora colaboradora)"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDiretordeArte"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center"
                android:text="Diretor de Arte"
                android:textAlignment="center"
                android:textColor="#50C878"
                android:textIsSelectable="false"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDiretor"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Matheus Pereira de Goes"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDesenvolvedores"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center"
                android:text="Desenvolvedores"
                android:textAlignment="center"
                android:textColor="#50C878"
                android:textIsSelectable="false"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNomesProgramadores"
                android:layout_width="match_parent"
                android:layout_height="132dp"
                android:gravity="center"
                android:text="
Giovanni Gabriel Angelico
\n Leonardo Campos Guimarães
\n Luis Felipe Filenga
\n Matheus Pereira de Goes
\n Matheus Ryoske Saito Kaihara
"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtFerramentas"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center"
                android:text="Ferramentas"
                android:textAlignment="center"
                android:textColor="#50C878"
                android:textIsSelectable="false"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtUtilitários"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="
Android Visual Studio
\n Figma
\n Adobe Illustrator
\n Java (Linguagem de Programação)"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCurso"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center"
                android:text="Curso"
                android:textAlignment="center"
                android:textColor="#50C878"
                android:textIsSelectable="false"
                android:textSize="32sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/unisagrado_creditos" />

            <TextView
                android:id="@+id/txtApoio"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:gravity="center"
                android:text="Apoio"
                android:textAlignment="center"
                android:textColor="#50C878"
                android:textIsSelectable="false"
                android:textSize="32sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/unisagrado_creditos_proreitoria" />

            <TextView
                android:id="@+id/txtCopyright"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:gravity="center"
                android:text="© 2023 - UNISAGRADO / UNIHEAL"
                android:textAlignment="center"
                android:textColor="#50C878"
                android:textIsSelectable="false"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>